<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('../partials/header.ejs')%>
    <script src="/js/consome_viacep.js" ></script>
    <script src="/js/preenche_pelo_cpf.js" ></script>
</head>
<body  >
    
    <%-include('../partials/navbar.ejs')%>

    <div class="conteudo" >
        <div class="container" >
            <!-- <h3>Reboque escolhido</h3> -->
            <!--  -->
            <form action="/reserva/dados-confirma" method="POST">
                <div class="lista-reboques">



                    <div class="card card-reserva" style="width: 25rem;">
                        <img src="../<%=reboque.foto%>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Tipo: <%=reboque.modelo%></h5>
                            <h5 class="card-text">Total R$: <%=valorTotalDaReserva%>,00</h5>
                            <h5 class="card-text">PBT: <%=reboque.pesoBruto%> Kg</h5>
                            <hr>
                            <h5 class="card-text">Data da Retirada: <%=dataInicio%></h5>
                            <h5 class="card-text">Data da Entrega: <%=dataFim%></h5>
                        </div>
                    </div>
            

                    <!-- Dados pessoais -->
                    <div class="card card-reserva" style="width: 25rem;">
                            <div class="card-body">
                                <h3 class="card-title">Preencha com seus dados</h3>
                                <hr>
                                <div class="form-group">
                                    <label for="cpf">CPF</label>
                                    <input class="form-control" id="cpf" type="text" name="cpf" >
                                </div>
                                <div class="form-group">
                                    <label for="nome">Nome</label>
                                    <input class="form-control" id="nome" type="text" name="nome">
                                </div>
                                <div class="form-group">
                                    <label for="sobrenome">Sobrenome</label>
                                    <input class="form-control" id="sobrenome" type="text" name="sobrenome">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input class="form-control" id="email" type="email" name="email" >
                                </div>
                                                                                              
                                <div class="form-group">
                                    <label for="rg">RG</label>
                                    <input class="form-control" id="rg" type="text" name="rg">
                                </div>
                                
                                <div class="form-group">
                                    <label for="telefone">Telefone</label>
                                    <input class="form-control" id="telefone" type="text" name="telefone" >
                                </div> 
                                <div class="form-group">
                                    <label for="dataNascimento">Data de nascimento</label>
                                    <input class="form-control" id="dataNascimento" type="date" name="dataNascimento" >
                                </div> 
                                
                        </div>
                    </div>


                    <!-- Dados de endereço -->
                    <div class="card card-reserva" style="width: 25rem;">
                        <div class="card-body">
                            <h3 class="card-title">Seu endereço</h3>
                            <hr>
                            <div class="form-group">
                                <label for="cep">CEP</label>
                                <input class="form-control" id="cep" type="text" name="cep" placeholder="Ex.: 96408560">
                            </div>
                            <div class="form-group">
                                <label for="logradouro">Logradouro</label>
                                <input class="form-control" id="logradouro" type="text" name="logradouro">
                            </div>
                            <div class="form-group">
                                <label for="complemento">Complemento</label>
                                <input class="form-control" id="complemento" type="text" name="complemento">
                            </div>
                            <div class="form-group">
                                <label for="bairro">Bairro</label>
                                <input class="form-control" id="bairro" type="text" name="bairro" >
                            </div>
                            <div class="form-group">
                                <label for="localidade">Cidade</label>
                                <input class="form-control" id="localidade" type="text" name="localidade">
                            </div>
                            <div class="form-group">
                                <label for="uf">Estado (UF)</label>
                                <input class="form-control" id="uf" type="text" name="uf">
                            </div>
                            
                            <div class="form-group">
                                <label for="numeroDaCasa">Número da Casa</label>
                                <input class="form-control" id="numeroDaCasa" type="text" name="numeroDaCasa" >
                            </div>
                            
                        </div>
                        <p style="margin: 0.5rem;" >
                            <input class="btn btn-primary" type="submit" value="Pagar com PIX">
                        </p>
                    </div>

                    <input type="hidden" id="idReboque" name="idReboque" value="<%=reboque.id%>">
                    <input type="hidden" id="dataInicio" name="dataInicio" value="<%=dataInicio%>">
                    <input type="hidden" id="dataFim" name="dataFim" value="<%=dataFim%>">
                    <input type="hidden" id="valorDiaria" name="valorDiaria" value="<%=reboque.valorDiaria%>">

                </div>
            </form>
            <!--  -->
        </div>
    </div>



    <%-include('../partials/footer.ejs')%>






</body>
</html>