    <script src="/js/validaDadosFormulario.js" ></script>
</head>
<body  >
    
    <%-include('../../partials/navbar.ejs')%>

    <div class="conteudo" >


        <!-- <% if (user == '') { %> -->

            <!-- Menssagem do topo da página em jumbotron -->
            <div class="jumbotron jumbotron-fluid">
                <h1 class="display-4" >Formulário da reserva</h1>
                <!-- <p class="lead">Clientes cadastrados podem ver seu histórico de locações, gerenciar suas reservas e receber descontos.</p> -->
            </div>

        <!-- <% } %> -->
    </div>


    <div class="container" >
            <!-- <h3>Reboque escolhido</h3> -->
            <!--  -->
            <form class="needs-validation" novalidate action="/reserva/cliente/confirmar" method="POST">
                <div class="lista-reboques">

                    
                    <!-- Dados de RESERVA -->
                    <div class="card card-reserva" style="width: 25rem;">
                        <div class="card-body">
                            <h3 class="card-title">Período</h3>
                            <hr>

                            <div class="input-group mb-3">
                                <span class="input-group-text" >Início</span>
                                <input class="form-control" id="dataInicio_input" type="text" name="dataInicio_input" value="<%= new Date(dataInicio).toLocaleDateString('pt-BR').slice(0, 10) %>" disabled>
                                <span class="input-group-text" id="horaInicio_input" name="horaInicio_input"><%= new Date(dataInicio).toString().slice(16, 21) + 'hs' %></span>
                                
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text" >Fim</span>
                                <input class="form-control" id="dataFim_input" type="text" name="dataFim_input" value="<%= new Date(dataFim).toLocaleDateString('pt-BR').slice(0, 10) %>" disabled>
                                <span class="input-group-text" id="horaFim_input" name="horaFim_input"><%= new Date(dataFim).toString().slice(16, 21) + 'hs' %></span>
                            
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text" >Diárias</span>
                                <input class="form-control" id="diarias_input" type="text" name="diarias_input" value="<%= dias %> dias" disabled>
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text" >Total R$</span>
                                <input class="form-control" id="dataFim_input" type="text" name="dataFim_input" value="<%=(valorTotalDaReserva.toFixed(2)).replace('.',',')%>" disabled>
                            </div>
                        
                        </div><br>
                    </div>
            
                    <!-- Dados pessoais -->
                    <div class="card card-reserva">
                        <div class="card-body">
                            <h3 class="card-title">Cliente</h3>
                            <hr>

                            <div class="form-group">
                                <label for="nome">Nome completo</label>
                                <span class="text-danger"> * </span>
                                <input class="form-control" id="nome" type="text" name="nome" minlength="5" maxlength="50" required>
                                <div class="valid-feedback">
                                    <!-- Looks good! -->
                                </div>
                                <div class="invalid-feedback">
                                    <span id="invalidNome" ></span>
                                </div>
                                
                            </div>

                            <div class="form-group">
                                <label for="cpf">CPF</label>
                                <span class="text-danger"> * </span>
                                <input class="form-control" id="cpf" type="text" name="cpf" minlength="14" maxlength="14" required>
                                <div class="valid-feedback">
                                    <!-- Looks good! -->
                                </div>
                                <div class="invalid-feedback">
                                    <span id="invalidCPF" ></span>
                                </div>
                            </div>
                                                                                            
                            <div class="form-group">
                                <label for="telefone">Telefone</label>
                                <span class="text-danger"> * </span>
                                <input class="form-control" id="telefone" type="text" name="telefone" maxlength="15" required>
                                <div class="valid-feedback">
                                    <!-- Looks good! -->
                                </div>
                                <div class="invalid-feedback">
                                    <span id="invalidTelefone" ></span>
                                </div>
                            </div> 

                            <div class="form-group">
                                <label for="email">E-mail</label>
                                <input class="form-control" id="email" type="email" name="email" maxlength="70" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$">
                                <div class="invalid-feedback">
                                    <span id="invalidEmail"></span>
                                </div>
                            </div> 
                            
                        </div>
                    </div>


                    <!-- Dados de endereço -->
                    <div class="card card-reserva" style="width: 25rem;">
                        <div class="card-body">
                            <h3 class="card-title">Endereço</h3>
                            <hr>
                            
                            
                            
                            <div class="row g-3">
                                <div class="form-group col">
                                    <label for="cep">CEP</label>
                                    <!-- <span class="text-danger"> * </span> -->
                                    <input class="form-control" id="cep" type="text" name="cep" minlength="9" maxlength="9" >
                                    <div class="valid-feedback">
                                        <!-- Looks good! -->
                                    </div>
                                    <div class="invalid-feedback">
                                        <span id="invalidCep"></span>
                                    </div>
                                </div>
                                <div class="form-group col">
                                    <label for="numeroDaCasa">Nº da casa</label>
                                    <span class="text-danger"> * </span>
                                    <input class="form-control" id="numeroDaCasa" type="text" name="numeroDaCasa" maxlength="5" required >
                                    <div class="valid-feedback">
                                        <!-- Looks good! -->
                                    </div>
                                    <div class="invalid-feedback">
                                        <span id="invalidNumeroDaCasa"></span>
                                    </div>
                                </div>
                            </div>
                           

                            <div class="form-group">
                                <label for="logradouro">Rua</label>
                                <span class="text-danger"> * </span>
                                <input class="form-control" id="logradouro" type="text" name="logradouro" minlength="2" maxlength="100" required>
                                <div class="valid-feedback">
                                    <!-- Looks good! -->
                                </div>
                                <div class="invalid-feedback">
                                    <span id="invalidLogradouro"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="complemento">Complemento</label>
                                <input class="form-control" id="complemento" type="text" name="complemento" maxlength="200">
                                <div class="invalid-feedback">
                                    <span id="invalidComplento"></span>
                                </div>
                            </div>
                          
                            <div class="form-group">
                                <label for="localidade">Cidade</label>
                                <span class="text-danger"> * </span>
                                <input class="form-control" id="localidade" type="text" minlength="3" name="localidade" maxlength="50" required>
                                <div class="valid-feedback">
                                    <!-- Looks good! -->
                                </div>
                                <div class="invalid-feedback">
                                    <span id="invalidLocalidade"></span>
                                </div>
                            </div>
                        </div>
                        
                    </div>



                    <!-- Informções de pagamento -->
                    
                        
                            
                                <fieldset class="card-reserva card-body mb-3 p-3 border rounded shadow-sm bg-light">
                                <legend class="col-form-label col-sm-12 fw-bold text-primary mb-3">
                                    <i class="bi bi-wallet2"></i> Escolha a Forma de Pagamento
                                </legend>

                                <div class="col-sm-12">

                                    <!-- PIX -->
                                    <div class="form-check mb-2">
                                    <input class="form-check-input" onclick="alert('Após confirmar os dados da sua reserva será gerado um QR Code Pix. Caso não seja efetuado o pagamento em 1h, a reserva será cancelada.')" type="radio" name="formaPagamento" id="formaPagamentoPix" value="PIX" required>
                                    <label class="form-check-label fw-semibold" for="formaPagamentoPix">
                                        <i class="bi bi-upc-scan text-success"></i> Pix
                                    </label>
                                    <div class="valid-feedback">
                                        Forma de pagamento válida.
                                    </div>
                                    <div class="invalid-feedback">
                                        <span id="invalidPix">Selecione uma forma de pagamento.</span>
                                    </div>
                                    </div>

                                    <!-- Dinheiro -->
                                    <div class="form-check">
                                    <input class="form-check-input" onclick="alert('Ao escolher Dinheiro, comunique a empresa pelo WhatsApp (53) 99703-2373. Caso contrário, sua reserva será removida em 1h.')" type="radio" name="formaPagamento" id="formaPagamentoDinheiro" value="DINHEIRO" required
                                        data-bs-toggle="tooltip" data-bs-placement="right"
                                        title="Ao escolher Dinheiro, comunique a empresa pelo WhatsApp (53) 99703-2373. Caso contrário, sua reserva será removida em 1h.">
                                    <label class="form-check-label fw-semibold" for="formaPagamentoDinheiro">
                                        <i class="bi bi-cash-coin text-warning"></i> Dinheiro
                                    </label>
                                    <div class="valid-feedback">
                                        Forma de pagamento válida.
                                    </div>
                                    <div class="invalid-feedback">
                                        <span id="invalidDinheiro">Selecione uma forma de pagamento.</span>
                                    </div>
                                    </div>
                                    <br>
                                    <hr>

                                    <div class="d-flex justify-content-center" style="margin: 0.5rem;">
                                        <button class="btn btn-secondary me-3" type="button" onclick="history.back()">Voltar</button>
                                        <input class="btn btn-primary validation" id="botao" type="submit" value="Confirmar">
                                    </div>

                                </div>


                                </fieldset>

                                <!-- Ativar tooltips do Bootstrap -->
                                <script>
                                document.addEventListener("DOMContentLoaded", function () {
                                    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
                                    tooltipTriggerList.map(function (tooltipTriggerEl) {
                                    return new bootstrap.Tooltip(tooltipTriggerEl)
                                    })
                                });
                                </script>


